<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  {{!-- <label class="label">Enter Report Details:</label> --}}
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label class="label">Code</label>
        <input class="input" type="text" placeholder="00" name="code">
      </div>
      <div class="field">
        <label class="label">Temperature</label>
        <input class="input" type="text" placeholder="00.0C" name="temperature">
      </div>
      <div class="field">
        <label class="label">Wind Speed</label>
        <input class="input" type="text" placeholder="00.00Km/h" name="windSpeed">
      </div>
      <div class="field">
        <label class="label">Wind Direction</label>
        <input class="input" type="text" placeholder="000deg" name="windDirection">
      </div>
      <div class="field">
        <label class="label">Pressure</label>
        <input class="input" type="text" placeholder="000hPa" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-primary">Submit Report</button>
</form>